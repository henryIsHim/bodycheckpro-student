@model BodyCheckWebAPI.Models.BodyCheckViewModel
@{
    ViewData["Title"] = "Add Body Check Record";
}
<h1>Create</h1>
<h4>@ViewData["Title"]</h4>
<form enctype="multipart/form-data" method="post" asp-controller="BodyCheck" asp-action="Create" class="w-75 mx-auto">
    <div class="mb-3">
        <label for="StudentId" class="form-label">Please enter Student Id:</label>
        <input type="text" class="form-control" id="StudentId" asp-for="StudentId" />
    </div>
    <div class="mb-3">
        <label for="Firstname" class="form-label">Please enter Firstname:</label>
        <input type="text" class="form-control" id="Firstname" asp-for="Firstname" />
    </div>
    <div class="mb-3">
        <label for="Lastname" class="form-label">Please enter Lastname:</label>
        <input type="text" class="form-control" id="Lastname" asp-for="Lastname" />
    </div>
    <div class="mb-3">
        <label for="HeightCm" class="form-label">Please enter Height (Cm.):</label>
        <input type="text" class="form-control" id="HeightCm" asp-for="HeightCm" />
    </div>
    <div class="mb-3">
        <label for="WeightKg" class="form-label">Please enter Weight (Kg.):</label>
        <input type="text" class="form-control" id="WeightKg" asp-for="WeightKg" />
    </div>
    <div class="mb-3">
        <label>&nbsp;&nbsp;&nbsp;</label>
        <div class="col-sm-9">
            <input type="submit" class="btn btn-info mx-auto d-inline" value="Add" />
            <input type="button" class="btn btn-primary mx-auto d-inline" value="Cancel" action="action"
                onclick="window.location.href='../Student'" />
        </div>
    </div>
</form>